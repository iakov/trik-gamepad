    <EditTextPreference
        android:key="showPads"
        android:title="Arrows transparancy"
        android:defaultValue="100"
        android:hint="0..255"
        android:inputType="number"
        android:numeric="integer"
        android:summary="0 for fully transparent, and 255 is opaque."/>
    
    <EditTextPreference 
        android:key="wheelSens"
        android:title="Wheel sensitivity"
        android:defaultValue="7"
        android:hint="1..100"
        android:inputType="number"
        android:summary="5..10 as usual, 1 for very sensitive"/>

    <EditTextPreference
        android:inputType="textUri"
        android:key="videoURI"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="URI for video stream to play" />
    
</PreferenceScreen>