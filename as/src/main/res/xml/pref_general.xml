    <EditTextPreference
        android:defaultValue="100"
        android:hint="0..255"
        android:inputType="number"
        android:key="showPads"
        android:numeric="integer"
        android:summary="0 for fully transparent, and 255 is opaque."
        android:title="Arrows transparancy" />
    
    <EditTextPreference 
        android:defaultValue="7"
        android:hint="1..100"
        android:inputType="number"
        android:key="wheelSens"
        android:summary="5..10 as usual, 1 for very sensitive"
        android:title="Wheel sensitivity" />

    <EditTextPreference
        android:inputType="textUri"
        android:key="videoURI"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="URI for video stream to play" />

    <PreferenceScreen
        android:key="deviceInfo"
        android:title="About system">
        <Preference
            android:enabled="false"
            android:key="firmwareVersion"
            android:title="SDK version" />

        <Preference
            android:key="androidVersion"
            android:title="Android version"
            android:enabled="false" />

        <Preference
            android:key="graphicMode"
            android:title="Graphic mode"
            android:enabled="false" />

    </PreferenceScreen>
    
</PreferenceScreen>